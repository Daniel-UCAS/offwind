@model Offwind.WebApp.Areas.CFD.Models.BoundaryConditions.VFieldU
<form class="form-horizontal indent" method="post">
    <legend class="small">General</legend>
    @Html.EditorFor(m => m.InternalField, "FieldVectorValue")
        
    <legend class="small">Bottom</legend>
    @Html.EditorFor(m => m.BottomType)
    @Html.EditorFor(m => m.BottomValue, "FieldVectorValue")

    <legend class="small">Top</legend>
    @Html.EditorFor(m => m.TopType)
        
    <legend class="small">West</legend>
    @Html.EditorFor(m => m.WestType)
    @Html.EditorFor(m => m.WestParams.Uref)
    @Html.EditorFor(m => m.WestParams.Href)
    @Html.EditorFor(m => m.WestParams.N)
    @Html.EditorFor(m => m.WestParams.Z)
    @Html.EditorFor(m => m.WestParams.Z0)
    @Html.EditorFor(m => m.WestParams.Value, "FieldVectorValue")
    @Html.EditorFor(m => m.WestParams.ZGround)

    <legend class="small">East</legend>
    @Html.EditorFor(m => m.EastType)

    <legend class="small">North</legend>
    @Html.EditorFor(m => m.NorthType)

    <legend class="small">South</legend>
    @Html.EditorFor(m => m.SouthType)
    @Html.EditorFor(m => m.SouthParams.Uref)
    @Html.EditorFor(m => m.SouthParams.Href)
    @Html.EditorFor(m => m.SouthParams.N)
    @Html.EditorFor(m => m.SouthParams.Z)
    @Html.EditorFor(m => m.SouthParams.Z0)
    @Html.EditorFor(m => m.SouthParams.Value, "FieldVectorValue")
    @Html.EditorFor(m => m.SouthParams.ZGround)

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn">Cancel</button>
    </div>

</form>
