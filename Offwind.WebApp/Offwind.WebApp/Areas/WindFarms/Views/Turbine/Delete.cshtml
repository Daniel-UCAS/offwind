@model Offwind.WebApp.Areas.WindFarms.Models.VTurbine

@{
    ViewBag.Title = "Turbine Details | Wind Farms & Turbines Database | Offwind";
}

<style>
</style>

<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home", new { area = "" })"><i class="icon-home"></i></a> <span class="divider">/</span></li>
    <li><a href="@Url.Action("Index", "HomeWindFarms", new { area = "WindFarms" })">Wind Farms & Turbines Database</a> <span class="divider">/</span></li>
    <li><a href="@Url.Action("List", "Turbine", new { area = "WindFarms" })">Turbines</a> <span class="divider">/</span></li>
    <li class="active">Turbine Details</li>
</ul>
<div class="row-fluid row-content-block">
    <div class="span12 well actionable-page">
        <h1>Turbine Deletion</h1>
        <h3>Are you sure you want to delete this?</h3>
     
        @using (Html.BeginForm())
        {
            <p>
                <input class="btn btn-primary" type="submit" value="Delete" />
                @if (Model.ReturnTo == "list")
                {
                    <a href="@Url.Action("List", "WindFarm", new { area = "WindFarms" })" class="btn">Cancel</a>
                }
                else
                {
                    <a href="@Url.Action("Details", "WindFarm", new { area = "WindFarms", id = Model.Id })" class="btn">Cancel</a>
                }
            </p>
        }
        <h2>Properties</h2>
        <p>
            <table class="table table-bordered model-view">
                <tr>
                    <td>Name</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Manufacturer</td>
                    <td>@Model.Manufacturer</td>
                </tr>
                <tr>
                    <td>Rated power (MW)</td>
                    <td>@Model.RatedPower</td>
                </tr>
            </table>
        </p>
    </div>

</div>


@section scripts
{
}
