@model Offwind.WebApp.Areas.WindFarms.Models.VTurbine

@{
    ViewBag.Title = "Add Turbine | Wind Farms & Turbines Database | Offwind";
}

<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home", new { area = "" })"><i class="icon-home"></i></a> <span class="divider">/</span></li>
    <li><a href="@Url.Action("Index", "HomeWindFarms", new { area = "WindFarms" })">Wind Farms & Turbines Database</a> <span class="divider">/</span></li>
    <li><a href="@Url.Action("turbines", "HomeWindFarms", new { area = "WindFarms" })">Turbines</a> <span class="divider">/</span></li>
    <li class="active">Turbine Editor</li>
</ul>
<div class="row-fluid row-content-block">
    <div class="span12 well">
        <h1>Turbine Editor</h1>
        <form class="form-horizontal indent" method="post">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <fieldset>
                <legend>General</legend>
                @Html.EditorFor(model => model.Name)
                @Html.EditorFor(model => model.Manufacturer)
                @Html.EditorFor(model => model.Description, "RtfEditor")
                
                @Html.EditorFor(model => model.RatedPower)
                @Html.EditorFor(model => model.HubHeight)
                @Html.EditorFor(model => model.HubDiameter)

                @Html.EditorFor(model => model.WindSpeedCutIn)
                @Html.EditorFor(model => model.WindSpeedRated)
                @Html.EditorFor(model => model.WindSpeedCutOut)

                @Html.EditorFor(model => model.TipSpeedRated)
                @Html.EditorFor(model => model.NacelleMass)
                @Html.EditorFor(model => model.TowerMass)

            </fieldset>
            <fieldset>
                <legend>Rotor</legend>
                @Html.EditorFor(model => model.RotorDiameter)
                @Html.EditorFor(model => model.RotorOrientation)
                @Html.EditorFor(model => model.RotorConfiguration)
                @Html.EditorFor(model => model.Control)
                @Html.EditorFor(model => model.RotorSpeedCutIn)
                @Html.EditorFor(model => model.RotorSpeedRated)
                @Html.EditorFor(model => model.RotorMass)
                
            </fieldset> 

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        </form>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
    </script>
}
