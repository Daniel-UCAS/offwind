@using Offwind.WebApp.Infrastructure.Navigation
@model Offwind.WebApp.Models.VWebPage
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/static/css/bootstrap.css")
    @Styles.Render("~/static/css/font-awesome.css")
    @Styles.Render("~/static/css/custom.css")
    @RenderSection("styles", required: false)
    @Styles.Render("~/static/css/bootstrap-responsive.min.css")
</head>
<body>
    <div id="wrap">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                        class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                    </a><a class="brand" href="@Url.Action("Index", "Home", new { area = "" })">Offwind</a>
                    @Html.Partial("_LoginPartial")
                    <div class="nav-collapse">
                        <ul class="nav">
                            <li@* class="active"*@><a href="@Url.Action("Index", "Home", new { area = "" })">Home</a></li>
                            <li><a href="@Url.Action("Index", "EngineeringTools", new { area = "EngineeringTools" })">
                                Engineering Tools</a></li>
                            <li><a href="@Url.Action("Index", "CFD", new { area = "CFD" })">Advanced Tools</a></li>
                            <li><a href="@Url.Action("Contacts", "Home", new { area = "" })">Contacts</a></li>
                            @*<li><a href="@Url.Action("Index", "About", new { area = "" })">About</a></li>*@
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid main-container">
            <div class="row-fluid">
                @{
                    var navigation = (NavItem<NavUrl>)ViewBag.SideNav;
                }
                @if (navigation != null && navigation.Any())
                {
                    <div class="span2">
                        @Html.Partial("~/Views/Shared/__SideNav.cshtml")
                    </div>
                    <div class="span10">
                        @RenderBody()
                    </div>
                }
                else
                {
                    <div class="span12">
                        @RenderBody()
                    </div>
                }
            </div>
        </div>
        <div id="push">
        </div>
    </div>
    @Html.Partial("~/Views/Shared/__Footer.cshtml")
    @*<script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>*@
    @Scripts.Render("~/static/js/jquery-1.7.1.min.js")
    @Scripts.Render("~/static/js/bootstrap.min.js")
    @Scripts.Render("~/static/js/offwind.js")
    @RenderSection("scripts", required: false)
</body>
</html>