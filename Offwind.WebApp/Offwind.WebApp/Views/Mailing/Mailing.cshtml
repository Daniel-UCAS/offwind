@model Offwind.WebApp.Models.Mailing.MailingModel

<h2>New mailing</h2>

<form class="form-horizontal indent" method="POST" action="">
    <fieldset>
        <div class="control-group">
            <label class="control-label"> @Html.LabelFor(model => model.SelectedUsers) </label>
            <div class="controls">
                @Html.ListBoxFor(model => model.SelectedUsers, new MultiSelectList(Model.Users, "UserName"))
            </div>
        </div>
        
        @Html.EditorFor(model => model.Subject)
        @Html.EditorFor(model => model.MsgBody, "RtfEditor")
    </fieldset>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">Send</button>
        <button type="reset" class="btn">Cancel</button>
    </div>
</form>

@section scripts
{
    @Html.Partial("__CKEditor", new[] { "MsgBody" })
}
