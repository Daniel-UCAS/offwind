@using Offwind.WebApp.Infrastructure
@model Offwind.WebApp.Models.ForgottenPassword
@using (Html.BeginForm("ForgottenPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.BootstrapValidationSummary()

    @Html.EditorFor(m => m.Email)
    <input type="submit" class="btn btn-primary btn-large" value="Send email" />
}
