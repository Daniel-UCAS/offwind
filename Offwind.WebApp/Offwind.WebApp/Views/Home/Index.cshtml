@using Offwind.WebApp.Infrastructure
@model Offwind.WebApp.Models.VWebPage
@{
    ViewBag.Title = Model.BrowserTitle;
}

<style>
    .carousel-caption.meeting-december
    {
        width: 400px;
        right: 30px;
        bottom: 30px;
        left: auto;
    }
</style>
<div class="row-fluid">
    <div class="span8">
        <div id="myCarousel"  class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                 @*@Html.CarouselItem("event-global-expert-meeting-2013-postpone")
                 @Html.CarouselItem("offwind-global-expert-meeting")*@
                 @Html.CarouselItem("what-is-offwind")
            </div>
@*            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>*@
        </div>
    </div>
    <div class="span4 well sub-block-fixed main-right">
        <h2>@Html.BlockTitle("home-greeting")</h2>
        @Html.BlockContent("home-greeting")
        @if (!Request.IsAuthenticated)
        {
            <a href="@Url.Action("Register", "Account")" class="btn btn-success btn-large register">Register</a>
            <span class="word-or">or</span>
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-large login">Login</a>
        }
    </div>
</div>
<div class="row-fluid row-content-block">
    <div class="span4 well sub-block-fixed">
        <h2>@Html.BlockTitle("home-engineering-tools")</h2>
        @Html.BlockContent("home-engineering-tools")
        <a class="btn btn-info btn " href="@Url.Action("Index", "EngineeringTools", new { area = "EngineeringTools" })">Go to Engineering Tools &raquo;</a>
    </div>
    <div class="span4 well sub-block-fixed">
        <h2>@Html.BlockTitle("home-advanced-tools")</h2>
        @Html.BlockContent("home-advanced-tools")
        <a class="btn btn-info btn" href="@Url.Action("Index", "CFD", new { area = "CFD" })">Go to Advanced Tools &raquo;</a>
    </div>
    <div class="span4 well sub-block-fixed">
        <h2>@Html.BlockTitle("home-farms-and-turbines")</h2>
        @Html.BlockContent("home-farms-and-turbines")
        <a class="btn btn-info btn" href="@Url.Action("Index", "HomeWindFarms", new { area = "WindFarms" })">Go to Wind Farms & Turbines &raquo;</a>
    </div>
</div>
<div class="row-fluid row-content-block">
    <div class="span4 well sub-block-fixed">
        <h2>@Html.BlockTitle("Partners area")</h2>
        @Html.BlockContent("Partners area")
     <a class="" href="@Url.Action("Index", "HomePartners", new { area = "Partners" })">Go to Partners area &raquo;</a>
    </div>
    <div class="span4 well sub-block-fixed">
         <h2>@Html.BlockTitle("Help")</h2>
        @Html.BlockContent("Help")
        <a class="" href="@Url.Action("Index", "HomeHelp", new { area = "Help" })">Go to Help &raquo;</a>
    </div>
@*    <div class="span4 well sub-block-fixed">
         <h2>@Html.BlockTitle("Library")</h2>
        @Html.BlockContent("Library")
        <a class="" href="@Url.Action("Index", "HomeLibrary", new { area = "Library" })">Go to Library &raquo;</a>
    </div>*@
    <div class="span4 well sub-block-fixed">
        <h2>@Html.BlockTitle("Contact us")</h2>
        @Html.BlockContent("Contact us")
    </div>
</div>
@Html.Partial("__LatestPosts")

@section scripts
{
<script>
    $('.carousel').carousel({
        interval: 2000
    })
</script>    
}
